<Page x:Class="DeliverX.Pages.UbezpieczeniaAktualizujPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeliverX.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="536"
      Title="UbezpieczeniaAktualizujPage">

    <ScrollViewer HorizontalAlignment="Left" Height="400" Margin="0,0,0,0" VerticalAlignment="Top" Width="536">
        <Grid Height="400">
            <Label x:Name="ListujLabel" Content="Wybierz pojazd:" HorizontalAlignment="Left" Height="22" Padding="2 2 0 0" VerticalAlignment="Top" Width="110" Style="{DynamicResource BlackLabel}" FontSize="10" Margin="10,10,0,0"/>
            <ComboBox x:Name="ListujComboBox" Margin="120,10,229,368" BorderBrush="Black"  Width="170" Template="{DynamicResource BlueComboBox}"/>
            <Label x:Name="ListujUbezpieczeniaLabel" Content="Wybierz ubezpieczenie:" HorizontalAlignment="Left" Height="22" Padding="2 2 0 0" VerticalAlignment="Top" Width="110" Style="{DynamicResource BlackLabel}" FontSize="10" Margin="10,42,0,0"/>
            <ComboBox x:Name="ListujUbezpieczeniaComboBox" Margin="120,42,229,336" BorderBrush="Black"  Width="170" Template="{DynamicResource BlueComboBox}" IsEnabled="false"/>
            <Label x:Name="StareLabel" Content="Stare:" HorizontalAlignment="Left" Height="22" Padding="47 2 0 0" VerticalAlignment="Top" Width="122" Style="{DynamicResource BlackLabel}" FontSize="10" Margin="96,91,0,0"/>
            <Label x:Name="NoweLabel" Content="Nowe:" HorizontalAlignment="Left" Height="22" Padding="47 2 0 0" VerticalAlignment="Top" Width="122" Style="{DynamicResource BlackLabel}" FontSize="10" Margin="272,91,0,0"/>
            <Label x:Name="FirmaLabel" Content="Firma:" Height="22" Padding="2 2 0 0" VerticalAlignment="Top" Style="{DynamicResource BlackLabel}" FontSize="10" Margin="30,117,423,0"/>
            <Label x:Name="NrPolisyLabel" Content="Numer polisy:" HorizontalAlignment="Left" Height="22" Padding="2 2 0 0" VerticalAlignment="Top" Width="66" Style="{DynamicResource BlackLabel}" FontSize="10" Margin="30,147,0,0"/>
            <Label x:Name="CenaLabel" Content="Cena:" HorizontalAlignment="Left" Height="22" Padding="2 2 0 0" VerticalAlignment="Top" Width="66" Style="{DynamicResource BlackLabel}" FontSize="10" Margin="30,177,0,0"/>
            <Label x:Name="ObowiazujeOdLabel" Content="Obowiązuje od:" HorizontalAlignment="Left" Height="22" Padding="2 2 0 0" VerticalAlignment="Top" Width="114" Style="{DynamicResource BlackLabel}" FontSize="10" Margin="30,243,0,0"/>
            <Label x:Name="ObowiazujeDoLabel" Content="Obowiązuje do:" HorizontalAlignment="Left" Height="22" Padding="2 2 0 0" VerticalAlignment="Top" Width="114" Style="{DynamicResource BlackLabel}" FontSize="10" Margin="30,286,0,0"/>
            <TextBox x:Name="FirmaTextBox" HorizontalAlignment="Left" Height="22" Margin="96,117,0,0" Padding="0 2 0 0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" FontSize="10" Style="{DynamicResource BlueTextBox}" IsEnabled="False"/>
            <TextBox x:Name="NrPolisyTextBox" HorizontalAlignment="Left" Height="22" Margin="96,147,0,0" Padding="0 2 0 0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" FontSize="10" Style="{DynamicResource BlueTextBox}" IsEnabled="False"/>
            <TextBox x:Name="CenaTextBox" HorizontalAlignment="Left" Height="22" Margin="96,177,0,0" Padding="0 2 0 0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" FontSize="10" Style="{DynamicResource BlueTextBox}" IsEnabled="False"/>
            <TextBox x:Name="JednostkaCenyTextBox" HorizontalAlignment="Left" Height="22" Margin="218,177,0,0" Padding="0 2 0 0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="36" FontSize="10" Style="{DynamicResource BlueTextBox}" IsEnabled="False"/>
            <ComboBox x:Name="FirmaComboBox_Nowa" Margin="272,117,125,261" BorderBrush="Black" Template="{DynamicResource BlueComboBox}"/>
            <TextBox x:Name="NrPolisyTextBox_Nowe" HorizontalAlignment="Left" Height="22" Margin="272,147,0,0" Padding="0 2 0 0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" FontSize="10" Style="{DynamicResource BlueTextBox}"/>
            <TextBox x:Name="CenaTextBox_Nowe" HorizontalAlignment="Left" Height="22" Margin="272,177,0,0" Padding="0 2 0 0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" FontSize="10" Style="{DynamicResource BlueTextBox}"/>
            <TextBox x:Name="JednostkaCenyTextBox_Nowe" HorizontalAlignment="Left" Height="22" Margin="394,177,0,0" Padding="0 2 0 0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="36" FontSize="10" Style="{DynamicResource BlueTextBox}"/>

            <TextBox x:Name="ObowiazujeOdTextBox" HorizontalAlignment="Left" Height="22" Margin="144,243,0,0" Padding="0 2 0 0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" FontSize="10" Style="{DynamicResource BlueTextBox}" IsEnabled="False"/>
            <TextBox x:Name="ObowiazujeDoTextBox" HorizontalAlignment="Left" Height="22" Margin="144,286,0,0" Padding="0 2 0 0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" FontSize="10" Style="{DynamicResource BlueTextBox}" IsEnabled="False"/>

            <DatePicker x:Name="ObowiazujeOd" HorizontalAlignment="Left" Height="22" Margin="272,243,0,0" VerticalAlignment="Top" Width="122" FirstDayOfWeek="Monday" BorderBrush="{x:Null}"/>
            <DatePicker x:Name="ObowiazujeDo" HorizontalAlignment="Left" Height="22" Margin="272,286,0,0" VerticalAlignment="Top" Width="122" FirstDayOfWeek="Monday" BorderBrush="{x:Null}"/>
            <Button x:Name="AktualizujButton" Content="Aktualizuj" Click="AktualizujButton_Click" FontWeight="Bold" Margin="168,349,265,29" Style="{DynamicResource BlueButton}"/>
            <Button x:Name="ResetButton" Content="RESET" Click="ResetButton_Click" FontWeight="Bold" Margin="0,349,161,29" Style="{DynamicResource BlueButton}" HorizontalAlignment="Right" Width="86"/>
        </Grid>
    </ScrollViewer>
</Page>
