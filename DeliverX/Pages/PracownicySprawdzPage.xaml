        <ComboBox x:Name="UprawnieniaPojazdComboBox" Margin="237,248,141,50" BorderBrush="Black"  Template="{DynamicResource BlueComboBox}"/>
        <Label x:Name="NrDokumentuLabel" Content="Numer dokumentu:" HorizontalAlignment="Left" Height="22" Padding="2 2 0 0" VerticalAlignment="Top" Width="98" Style="{DynamicResource BlackLabel}" FontSize="10" Margin="139,280,0,0"/>
        <TextBox x:Name="NrDokumentuTextBox" HorizontalAlignment="Left" Height="22" Margin="237,280,0,0" Padding="0 2 0 0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" FontSize="10" Style="{DynamicResource BlueTextBox}"  IsEnabled="False"/>
    </Grid>
    </ScrollViewer>
</Page>
